<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<PackageReferenceProjectContentFilesPath>$(MSBuildThisFileDirectory)..\content\ui\**</PackageReferenceProjectContentFilesPath>

	</PropertyGroup>

	<Target Name="CopyPackageReferenceProjectAssets" BeforeTargets="Build">
		<ItemGroup>
			<PackageReferenceProjectContentFiles Include="$(PackageReferenceProjectContentFilesPath)" />
		</ItemGroup>
		<Message Text="Copying kraftvaerk.umbraco.blockfilter files: $(PackageReferenceProjectContentFilesPath) - #@(PackageReferenceProjectContentFiles->Count()) files" Importance="high" />
		<Copy SourceFiles="@(PackageReferenceProjectContentFiles)" DestinationFiles="@(PackageReferenceProjectContentFiles->'$(MSBuildProjectDirectory)\wwwroot\app_plugins\kraftvaerk.umbraco.blockfilter.frontend\%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
	</Target>

	<Target Name="ClearPackageReferenceProjectAssets" BeforeTargets="Clean">
		<ItemGroup>
			<PackageReferenceProjectDir Include="$(MSBuildProjectDirectory)\wwwroot\app_plugins\kraftvaerk.umbraco.blockfilter.frontend\" />
		</ItemGroup>
		<Message Text="Clear old kraftvaerk.umbraco.blockfilter data" Importance="high" />
		<RemoveDir Directories="@(PackageReferenceProjectDir)" />
	</Target>


</Project>
